# ResuMatch Environment Configuration Template
# Copy this to .env and fill in your values

# OpenRouter API (for AI analysis)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=mistralai/mistral-7b-instruct:free

# Database (for persistent storage in production)
# If not provided, will use local JSON file storage
DATABASE_URL=postgresql://username:password@hostname:port/database
# or
POSTGRES_URL=postgresql://username:password@hostname:port/database

# Application Configuration
ANALYZER_MODE=auto  # auto, api, regex
ENABLE_SAMPLE_DATA=false  # Set to true only for demos

# Production Settings (Render specific)
PORT=8000
PYTHON_VERSION=3.11.4
